.row
  .col-md-12
    %p.bs-component
      %h4
        %b Listagem de Tipos de Envio de Projeto
        = link_to 'novo tipo de envio', new_administrator_project_participation_path(@project), class: 'btn btn-success pull-right'
%hr/
.row
  .col-md-12
    %table.table.table-condensed.table-striped
      %thead
        %tr
          %th #
          %th Nome
          %th Data
          %th Status
          %th Code
          %th Ações
      %tbody
        - @participations.each_with_index do |participation, i|
          %tr
            %td.col-md-1= i + 1
            %td= participation.name
            %td= "#{participation.start.strftime('%d/%m/%Y')} - #{participation.end.strftime('%d/%m/%Y')}" 
            %td= status_helper participation.status
            %td= participation.code
            %td.col-md-2
              = link_to "editar", edit_administrator_project_participation_path(project_id: @project, id: participation)
              = link_to "remover", administrator_project_participation_path(project_id: @project, id: participation), method: :delete, data: {confirm: t(:confirm_remove)}
