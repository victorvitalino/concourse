.row
  .col-md-12
    %p.bs-component
      %h4
        %b Listagem de Menus
        = link_to 'novo menu', new_administrator_project_nav_path(@project), class: 'btn btn-success pull-right'
%hr/
.row
  .col-md-12
    %table.table.table-condensed.table-striped
      %thead
        %tr
          %th #
          %th Nome
          %th Tipo
          %th Página
          %th URL
          %th Criado em
          %th Status
          %th Ações
      %tbody
        - @navs.each_with_index do |nav, i|
          %tr
            %td.col-md-1= nav.order + 1
            %td= nav.name
            %td= nav.nav_type
            %td= nav.page.name if nav.page.present?
            %td= nav.url
            %td= nav.created_at.strftime('%d/%m/%Y')
            %td= status_helper nav.status
            %td.col-md-2
              = link_to "editar", edit_administrator_project_nav_path(project_id: @project, id: nav)
              = link_to "remover", administrator_project_nav_path(project_id: @project, id: nav), method: :delete, data: {confirm: t(:confirm_remove)}
