= simple_form_for [:administrator, @project] do |f|
  .row
    .col-md-12  
      = f.input :name
  .row
    .col-md-12  
      = f.input :description, input_html: { class: 'redactor'}
  .row
    .col-md-2
      = f.input :start, as: 'string', input_html: { class: 'date', value: (@project.start) ? localize(f.object.start) : nil}
    .col-md-2  
      = f.input :end, as: 'string',input_html: { class: 'date', value: (@project.end) ? localize(f.object.end) : nil}
  %hr/
  .row
    .col-md-3
      = image_tag @project.logo_url, width: '200' if @project.logo?
      = f.input :logo, as: 'file'
    .col-md-3
      = image_tag @project.header_url, width: '200' if @project.header?
      = f.input :header, as: 'file'
    .col-md-3
      = image_tag @project.footer_url, width: '200' if @project.footer?
      = f.input :footer, as: 'file'
  %hr/
  .row
    .col-md-12
      = f.input :status
  %hr/
  .row
    .col-md-12  
      = f.button :submit, class: 'btn btn-success'
      = link_to "voltar", administrator_projects_path, class: 'btn btn-default'