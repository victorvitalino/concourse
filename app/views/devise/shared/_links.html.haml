- if controller_name != 'sessions' && controller_name != "user_sessions" 
  = link_to "Já possuo acesso a plataforma", new_session_path(resource_name), class: 'btn btn-primary'
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  %h2= link_to "Quero me cadastrar", new_registration_path(resource_name)
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to "Perdeu sua senha?", new_password_path(resource_name)
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "Não recebeu o e-mail de confirmação?", new_confirmation_path(resource_name)
  %br/
